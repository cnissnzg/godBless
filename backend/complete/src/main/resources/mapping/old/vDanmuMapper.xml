<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.vDanmuMapper">
    <select id="getVideoDanmu" resultType="com.example.entity.vDanmu">
        SELECT * FROM teachingassistant.vDanmu WHERE `idvideo`=#{idvideo};
    </select>
    <insert id="addDanmu" parameterType="com.example.entity.vDanmu">
        INSERT INTO `teachingassistant`.`vDanmu` (`idvideo`, `who`, `content`, `time`) VALUES (#{idvideo}, #{who}, #{content}, #{time});
    </insert>
</mapper>