<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.watermark.mapper.MaterialMapper">
    <select id="getProblemMaterial" resultType="com.watermark.entity.Material">
        SELECT * FROM Watermark.Material WHERE `pid`=#{pid} LIMIT 8;
    </select>
    <select id="getAllMaterial" resultType="com.watermark.entity.Material">
        SELECT * FROM Watermark.Material WHERE `pid`=#{pid};
    </select>
    <insert id="add" parameterType="com.watermark.entity.Material">
        INSERT INTO  Watermark.Material (`pid`, `filename`,`type`,`suffix`) VALUES (#{pid},#{filename},#{type},#{suffix});
    </insert>

</mapper>